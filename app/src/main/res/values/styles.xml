<resources>
    <!-- Base application theme. -->
    <style name="MaterialTheme.Base" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ProgressTheme" >
        <item name="colorAccent">@color/red</item>
    </style>

    <style name="MaterialTheme" parent="MaterialTheme.Base"></style>

    <style name="MaterialTheme.FullScreen" parent="MaterialTheme.Base">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="DialogTheme">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="ButtonPrimary">
        <item name="android:background">@drawable/btn_primary</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/body_text_size</item>
    </style>

    <style name="ButtonBorderless" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@android:color/holo_blue_dark</item>
        <item name="android:textSize">@dimen/body_text_size</item>
    </style>

    <style name="EditTextAppearance">
        <item name="android:textSize">@dimen/body_text_size</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="TextAppearanceRegularBody">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/body_text_size</item>
    </style>

    <style name="TextAppearanceBoldBody" parent="TextAppearanceRegularBody">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearanceRegularDisplay">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/display_text_size</item>
    </style>

    <style name="TextAppearanceBoldDisplay" parent="TextAppearanceRegularDisplay">
        <item name="android:textStyle">bold</item>
    </style>

</resources>
